.head{
  height: 90rpx;
  padding: 20rpx 0;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.head .text{
  width: 80rpx;
  font-size: .9em;
  text-align: center;
}

.head .tabs{
  flex: 0 1 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-end;
  margin: 0 10rpx;
  border-radius: 20rpx;
  overflow: hidden;
  font-size: 0.9em;
}

.tabs .tab{
  width: 65rpx;
  line-height: 52rpx;
  text-align: center;
  background-color: white;
  color: rgb(192, 192, 192);
}

.tabs .tab-active{
  background-color: rgb(113, 179, 255);
}

.items{
  width: 100%;
  position: relative;
}

.items:before{
  content: '';
  height: 96%;
  width: 8rpx;
  position: absolute;
  top: 2%;
  left: 28rpx;
  background-color: rgba(0,0,0,0.1);
}

.no-item{
  line-height: 150rpx;
  margin: 5rpx;
  padding-left: 40rpx;
  background-color: white;
  border-radius: 12rpx;
}

.item{
  height: 180rpx;
  width: 100%;
  position: relative;
  padding: 20rpx 10rpx 20rpx 80rpx;
}

.circle{
  height: 36rpx;
  width: 36rpx;
  position: absolute;
  top: 72rpx;
  left: 14rpx;
  border-radius: 50%;
  z-index: 2;
}

.transport .circle{
  border: 8rpx solid rgb(130, 195, 233);
  background-color: rgb(0, 162, 255);
}

.spot .circle{
  border: 8rpx solid rgb(166, 235, 166);
  background-color: rgb(102, 224, 98);
}

.hotel .circle{
  border: 8rpx solid rgb(245, 167, 158);
  background-color: salmon;
}

.restaurant .circle{
  border: 8rpx solid rgb(241, 201, 126);
  background-color: orange;
}

.note .circle{
  border: 8rpx solid rgb(189, 189, 189);
  background-color: rgb(156, 156, 156);
}

.card{
  background-color: white;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  overflow: hidden;
  position: relative;
}

.card-hover{
  box-shadow: 0 0 15rpx 2rpx rgba(0,0,0,0.1);
}

.card-active{
  box-shadow: 0 0 15rpx 2rpx rgb(102, 224, 98);
}

.content{
  width: 100%;
  height: 100%;
  padding: 26rpx 40rpx;
  transition: .2s;
  display: flex;
  align-items: center;
}

.content .name{
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.content .note{
  width: 100%;
  height: 100%;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.delete{
  width: 120rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0rpx;
  right: -120rpx;
  background-color: rgba(236, 25, 25, 0.849);
  transition: .1s;
}

.delete-active{
  transition: .3s;
  transform: translateX(-120rpx);
}
