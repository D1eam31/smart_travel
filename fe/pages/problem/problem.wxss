page{
    height:100%;
    font-size:18px;
}

.problem{
    padding:50rpx;
    background-color:#fff;
    display:flex;
    flex-direction:column;
    justify-content:center;
}

.problem-tip{
    display:flex;
    flex-direction:column;
    align-items:center;
}

.textarea{
    margin-top:50rpx;
    height: 500rpx;
    background-color:#F7F7F7;
}

.connect{
    margin-top:50rpx;
    height:80rpx;
    display:flex;
    align-items: center;
}

.con-tip{
    flex-basis:30%;
}

.input{
    height:80%;
    flex-basis:60%;
    padding:15rpx;
    background-color:#F7F7F7;
}

.pro-button{
    height:80rpx;
    width:70%;
    margin-top: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color:white;
    margin-bottom:40rpx;
}